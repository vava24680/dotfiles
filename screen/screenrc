# Enable alternate screen feature.
altscreen on

# Set the default window encoding to UTF-8.
defencoding UTF-8

# Set the default number of scrollback lines to 25000.
defscrollback 25000

# Always show custom status information at the status line.
hardstatus alwayslastline

# Set the term to screen-256color
term screen-256color

# Uncomment the following line if your screen version is less than 5.0.0.
source $HOME/.screenrc_4_9_9

# Uncomment the following line if your screen version is equal to or greater than 5.0.0.
# source $HOME/.screenrc_5_0_0
